@page
@model WebApplication5.Pages.Admin.Printers.editModel
@{
    ViewData["Title"] = "Edit Printer";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Printer</title>

    <!-- CSS Styling -->
    <style>
        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* General Styling */
        html {
            font-size: 20px;
        }

        body {
            background-color: #f4f7f6;
            margin-bottom: 60px;
            font-family: Arial, sans-serif;
        }

        /* Form container styling */
        .container {
            max-width: 90%;
            margin: 0 auto;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-bottom: 20px;
            font-size: 24px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .btn {
            padding: 10px 20px;
            margin-top: 10px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body>


        <div class="container">
            <div class="form-container">
   

            <!-- Form bound to the PrinterDto model -->
            <form id="editPrinterForm" method="post">
                <div class="form-group">
                    <label for="printerName">Printer Name</label>
                    <input type="text" id="printerName" name="PrinterDto.Naam" class="form-control" value="@Model.PrinterDto.Naam" />
                </div>

                <div class="form-group">
                    <label for="printerLocation">Location</label>
                    <input type="text" id="printerLocation" name="PrinterDto.Lokaal" class="form-control" value="@Model.PrinterDto.Lokaal" />
                </div>

                <div class="form-group">
                    <label for="printerIP">IP Address</label>
                    <input type="text" id="printerIP" name="PrinterDto.Ipaddress" class="form-control" value="@Model.PrinterDto.Ipaddress" />
                </div>

                <div class="form-group">
                    <label for="printerModel">Model</label>
                    <input type="text" id="printerModel" name="PrinterDto.Model" class="form-control" value="@Model.PrinterDto.Model" />
                </div>

                <div class="form-group">
                    <label for="printerComments">Comments</label>
                    <!-- Ensure the Opmerkingen field is being passed correctly -->
                    <textarea id="printerComments" name="PrinterDto.Opmerkingen" class="form-control">@Model.PrinterDto.Opmerkingen</textarea>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
               
            </form>

        </div>
    </div>

  
      
</body>
</html>
