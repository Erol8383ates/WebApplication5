@page
@model WebApplication5.Pages.Admin.Laptops.EditModel
@{
    ViewData["Title"] = "Edit Laptop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Laptop</title>

    <!-- CSS Styling -->
    <style>
        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* General Styling */
        html {
            font-size: 20px;
        }

        body {
            background-color: #f4f7f6;
            margin-bottom: 60px;
            font-family: Arial, sans-serif;
        }

        /* Form container styling */
        .container {
            max-width: 90%;
            margin: 0 auto;
			
        }

        .form-container {
            background-color: #fff;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-bottom: 20px;
            font-size: 24px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 10px;
        }

        .form-control {
            width: 50%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
           

        .btn {
            padding: 10px 20px;
            margin-top: 10px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <!-- Form bound to the LaptopDto model -->
            <form id="editLaptopForm" method="post">

                <div class="form-group">
                    <label for="laptopLocation">Lokaal</label>
                    <input type="text" id="laptopLocation" name="LaptopDto.Lokaal" class="form-control" value="@Model.LaptopDto.Lokaal" />
                </div>

                <div class="form-group">
                    <label for="laptopName">Naam</label>
                    <input type="text" id="laptopName" name="LaptopDto.Naam" class="form-control" value="@Model.LaptopDto.Naam" />
                </div>

                <div class="form-group">
                    <label for="laptopModel">Model</label>
                    <input type="text" id="laptopModel" name="LaptopDto.MerkModel" class="form-control" value="@Model.LaptopDto.MerkModel" />
                </div>

                <div class="form-group">
                    <label for="laptopName">Laptopcar</label>
                    <input type="text" id="laptopCar" name="LaptopDto.Laptopcar" class="form-control" value="@Model.LaptopDto.Laptopcar" />
                </div>

                <div class="form-group">
                    <label for="laptopCPU">CPU</label>
                    <input type="text" id="laptopCPU" name="LaptopDto.CPU" class="form-control" value="@Model.LaptopDto.CPU" />
                </div>

                <div class="form-group">
                    <label for="laptopRam">RAM</label>
                    <input type="text" id="laptopRam" name="LaptopDto.Ram" class="form-control" value="@Model.LaptopDto.Ram" />
                </div>

                <div class="form-group">
                    <label for="laptopVlan">Vlan</label>
                    <input type="text" id="laptopVlan" name="LaptopDto.Vlan" class="form-control" value="@Model.LaptopDto.Vlan" />
                </div>

                <div class="form-group">
                    <label for="laptopIP">IP Address</label>
                    <input type="text" id="laptopIP" name="LaptopDto.Ipaddress" class="form-control" value="@Model.LaptopDto.Ipaddress" />
                </div>

                <div class="form-group">
                    <label for="laptopComments">Opmerkingen</label>
                    <textarea id="laptopComments" name="LaptopDto.Opmerkingen" class="form-control">@Model.LaptopDto.Opmerkingen</textarea>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>

            </form>
        </div>
    </div>

</body>
</html>
