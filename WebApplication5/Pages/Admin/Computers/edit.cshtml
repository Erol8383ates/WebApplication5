@page
@model WebApplication5.Pages.Admin.Computers.EditModel
@{
    ViewData["Title"] = "Edit Computer";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Computer</title>

    <!-- CSS Styling -->
    <style>
        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* General Styling */
        html {
            font-size: 20px;
        }

        body {
            background-color: #f4f7f6;
            margin-bottom: 160px;
            font-family: Arial, sans-serif;
        }

        /* Form container styling */
        .container {
            max-width: 80%;
            margin: 0 auto;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-bottom: 20px;
            font-size: 24px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            width: 70%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .btn {
            padding: 10px 20px;
            margin-top: 10px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">
                    @Model.SuccessMessage
                </div>
            }

            <!-- Form bound to the ComputerDto model -->
            <form id="editComputerForm" method="post">

                <div class="form-group">
                    <label for="computerLocation">Lokaal</label>
                    <input type="text" id="computerLocation" name="ComputerDto.Lokaal" class="form-control" value="@Model.ComputerDto.Lokaal" />
                </div>

                <div class="form-group">
                    <label for="computerName">Naam</label>
                    <input type="text" id="computerName" name="ComputerDto.Naam" class="form-control" value="@Model.ComputerDto.Naam" />
                </div>

                <div class="form-group">
                    <label for="computerModel">Model</label>
                    <input type="text" id="computerModel" name="ComputerDto.MerkModel" class="form-control" value="@Model.ComputerDto.MerkModel" />
                </div>

                <div class="form-group">
                    <label for="computerCPU">CPU</label>
                    <input type="text" id="computerCPU" name="ComputerDto.CPU" class="form-control" value="@Model.ComputerDto.CPU" />
                </div>

                <div class="form-group">
                    <label for="computerRam">RAM</label>
                    <input type="text" id="computerRam" name="ComputerDto.Ram" class="form-control" value="@Model.ComputerDto.Ram" />
                </div>

                <div class="form-group">
                    <label for="computerVlan">Vlan</label>
                    <input type="text" id="computerVlan" name="ComputerDto.Vlan" class="form-control" value="@Model.ComputerDto.Vlan" />
                </div>

                <div class="form-group">
                    <label for="computerIP">IP Address</label>
                    <input type="text" id="computerIP" name="ComputerDto.Ipaddress" class="form-control" value="@Model.ComputerDto.Ipaddress" />
                </div>
                <div class="form-group">
                    <label for="computerComments">Opmerkingen</label>
                    <textarea id="computerComments" name="ComputerDto.Opmerkingen" class="form-control">@Model.ComputerDto.Opmerkingen</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>

            </form>

        </div>
    </div>

</body>
</html>
