@page
@model WebApplication5.Pages.Admin.Computers.IndexModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>PC'S</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <h2 class="text-center mb-5">List Of Computers</h2>

    <!-- Filter Form -->
    <!-- Form Container placed under the Toggle Dark Mode button -->
    <div class="form-container">
        <form method="get" class="search-form">
            <div class="form-group">
                <label for="searchNaam">Search by Naam:</label>
                <input type="text" id="searchNaam" name="searchNaam" value="@Model.SearchNaam" class="form-control" />
            </div>

            <div class="form-group">
                <label for="searchLokaal">Search by Lokaal:</label>
                <input type="text" id="searchLokaal" name="searchLokaal" value="@Model.SearchLokaal" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
 

    <a asp-page="./Create" class="btn btn-primary mt-3">Add New PC</a>

    <table class="excel-table">
        <tr>
            <th>ID</th>
            <th>Lokaal</th>
            <th>Naam</th>
            <th>MerkModel</th>
            <th>CPU</th>
            <th>Ram</th>
            <th>Vlan</th>
            <th>Ipaddress</th>
            <th>Opmerkingen</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
        @foreach (var pc in Model.Computers)
        {
            <tr>
                <td>@pc.Id</td>
                <td>@pc.Lokaal</td>
                <td>@pc.Naam</td>
                <td>@pc.MerkModel</td>
                <td>@pc.CPU</td>
                <td>@pc.Ram</td>
                <td>@pc.Vlan</td>
                <td>@pc.Ipaddress</td>
                <td>@pc.Opmerkingen</td>
                <td>@pc.CreateAt.ToString("MM/dd/yyyy")</td>
                <td style="white-space:nowrap">
                    <!-- Edit Button -->
                    <a class="btn btn-warning btn-sm edit-btn" href="/Admin/Computers/Edit?id=@pc.Id">Edit</a>
                    <!-- Delete Button -->
                    <a class="btn btn-danger btn-sm delete-btn" href="/Admin/Computers/Delete?id=@pc.Id">Delete</a>
                </td>
            </tr>
        }
    </table>

</body>
</html>

<style>
    /* Position the form container under Toggle Dark Mode button */
    .form-container {
        position: absolute;
        right: 10px; /* Adjust spacing */
        top: 60px; /* Adjust height to be under the toggle button */
        width: auto;
        background: white;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        gap: 15px; /* Space between elements */
        margin-top: 20px;
    }

    /* Make labels and inputs inline */
    .search-form {
        display: flex;
        align-items: center;
        gap: 10px; /* Space between fields */
    }

    .form-group {
        display: flex;
        align-items: center;
        gap: 5px; /* Space between label and input */
    }

        /* Adjust label styles */
        .form-group label {
            font-weight: bold;
            font-size: 14px;
        }

    /* Adjust input field styles */
    .form-control {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 150px; /* Adjust width */
    }

    /* Add space between form and table */
    .form-container {
        margin-bottom: 20px;
    }

    .excel-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Arial', sans-serif;
		
    }

        .excel-table th, .excel-table td {
            border: 1px solid #D0D0D0;
            padding: 18px;
            text-align: left;
        }

        .excel-table th {
            background-color: cadetblue;
            color: white;
        }

        .excel-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .excel-table td {
            font-size: 18px;
        }

        .excel-table th, .excel-table td {
            text-align: center;
        }

        /* Hover effect for rows */
        .excel-table tr:hover {
            background-color: honeydew;
        }
</style>
