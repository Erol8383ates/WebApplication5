@model WebApplication5.Pages.Admin.NetwerkMaterials.IndexModel

<!DOCTYPE html>
<html>
<head>
    <title>Netwerk Materials</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h2>Netwerk Materials</h2>
    <!-- Form Container placed under the Toggle Dark Mode button -->
    <div class="form-container">
        <form method="get" class="search-form">
            <div class="form-group">
                <label for="searchNaam">Search by Naam:</label>
                <input type="text" id="searchNaam" name="searchNaam" value="@Model.SearchNaam" class="form-control" />
            </div>

            <div class="form-group">
                <label for="searchLokaal">Search by Lokaal:</label>
                <input type="text" id="searchLokaal" name="searchLokaal" value="@Model.SearchLokaal" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <a asp-page="./Create" class="btn btn-primary">Add New Netwerk Material</a>
    <!-- Table for displaying all Netwerk Materials -->






    <table class="excel-table">
        <thead>
            <tr>
                <th>Lokaal</th>
                <th>Product</th>
                <th>Naam</th>
                <th>Model</th>
                <th>IP Address</th>
                <th>Opmerkingen</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var material in Model.NetwerkMaterials)
            {
                <tr>
                   
                    <td>@material.Lokaal</td>
                     <td>@material.Product</td>
                    <td>@material.Naam</td>
                    <td>@material.Model</td>
                    <td>@material.Ipaddress</td>
                    <td>@material.Opmerkingen</td>
                    <td style="white-space:nowrap">
                        <a class="btn btn-warning btn-sm edit-btn" href="/Admin/NetwerkMaterials/Edit?id=@material.Id">Edit</a>
                        <a class="btn btn-danger btn-sm delete-btn" href="/Admin/NetwerkMaterials/Delete?id=@material.Id">Delete</a>
                  
                </tr>
            }
        </tbody>
    </table>

    
</body>
</html>
<!-- Add CSS for Excel-like styling -->
<style>

    /* Position the form container under Toggle Dark Mode button */
    .form-container {
        position: absolute;
        right: 10px; /* Adjust spacing */
        top: 60px; /* Adjust height to be under the toggle button */
        width: auto;
        background: white;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        gap: 15px; /* Space between elements */
		margin-top: 20px;
    }

    /* Make labels and inputs inline */
    .search-form {
        display: flex;
        align-items: center;
        gap: 10px; /* Space between fields */
    }

    .form-group {
        display: flex;
        align-items: center;
        gap: 5px; /* Space between label and input */
    }

        /* Adjust label styles */
        .form-group label {
            font-weight: bold;
            font-size: 14px;
        }

    /* Adjust input field styles */
    .form-control {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 150px; /* Adjust width */
    }

    /* Add space between form and table */
    .form-container {
        margin-bottom: 20px;
    }




    .excel-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Arial', sans-serif;
		margin-top: 60px;
    }

        .excel-table th, .excel-table td {
            border: 1px solid #D0D0D0;
            padding: 8px;
            text-align: left;
        }

        .excel-table th {
            background-color: cadetblue;
            color: white;
        }

        .excel-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .excel-table td {
            font-size: 14px;
        }

        .excel-table th, .excel-table td {
            text-align: center;
            font-size: 16px;

        }

        /* Hover effect for rows */
        .excel-table tr:hover {
            background-color: #ddd;
        }


</style>



