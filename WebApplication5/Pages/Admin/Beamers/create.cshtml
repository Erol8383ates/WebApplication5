@page
@model WebApplication5.Pages.Admin.Beamers.CreateModel
<!DOCTYPE html>
<html>
<head>
    <title>Edit Page</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="create-page-background">
    <h2>Add New Beamer</h2>

    <form method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label class="form-label">Lokaal</label>
            <input asp-for="Beamer.Lokaal" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">MerkModel</label>
            <input asp-for="Beamer.MerkModel" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Lamp</label>
            <input asp-for="Beamer.Lamp" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Aansluting</label>
            <input asp-for="Beamer.Aansluting" class="form-control" />
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Opmerkingen</label>
            <div class="col-sm-8">
                <!-- Bind Opmerkingen to the model -->
                <textarea asp-for="Beamer.Opmerkingen" class="form-control"></textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</body>
</html>